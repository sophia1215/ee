<div class="row text-left">
  <div class="row">
    <div class="col-md-12">
      <%= form_for(Post.new, remote: true) do |f| %>
        <div class="form-grouop">
          <%= f.label :author, "author" %>
          <%= f.text_field :author, required: true, placeholder: "Author name", class: "form-control" %> <br>
        </div>
        <div class="form-grouop">
          <%= f.label :content %>
          <%= f.text_area :content, required: true, placeholder: "Your post", rows: 5, class: "form-control" %> <br>
        </div>
        <div class="form-grouop">
          <%= f.label :all_tags, "Tags" %>
          <%= f.text_field :all_tags, required: true, placeholder: "Tags separated with comma", class: "form-control" %>
          <br><br>
        </div>
        <div class="form-grouop">
        <%= f.submit "Post", class: "form-control btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>